<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>D&D Encounter</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans" rel="stylesheet">
    <link rel="stylesheet" href="/static/reset.css" />
    <link rel="stylesheet" href="/static/style-all.css" />
</head>
<body>
    <div class="content">
        <table>
            <tr>
                <th>Type</th>
                <th>Name</th>
                <th>Min</th>
                <th>Rolled</th>
                <th>Max</th>
                <th>Damage Taken</th>
            </tr>
                <tr>
                    <form method="post">
                        <td><input type="text" id="creatureType" name="creatureType" value="{{.NextCreatureTypeName}}" /></td>
                        <td><input type="text" id="creatureName" name="creatureName" /></td>
                        <td colspan="3"><input type="text" id="creatureHitDice" name="creatureHitDice" value="{{.NextCreatureHitDice}}" /></td>
                        <td><input type="submit" value="Add" /></td>
                    </form>
                </tr>
                {{range .CreatureInformation}}
                    <tr>
                        {{with .Creature}}
                            <td>{{.Type.Name}}</td>
                            <td>{{.Name}}</td>
                            <td>{{.Type.HitDice.Min}}</td>
                            <td>{{.RolledHealth}}</td>
                            <td>{{.Type.HitDice.Max}}</td>
                            <td>{{.DamageTaken}}</td>
                        {{end}}
                        <form method="post" action="{{.DamageURL}}">
                            <td><input type="text" id="damageAmount" name="damageAmount" value="" /></td>
                            <td><input type="submit" value="Damage" /></td>
                        </form>
                    </tr>
                {{end}}
        </table>
    </div>
</body>
